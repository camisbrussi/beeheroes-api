{
  "openapi": "3.0.0",
  "info": {
    "title": "BeeHeroes Documentation",
    "description": "This is a Beeheroes system api",
    "version": "1.0.0",
    "contact": {
      "email": "camila.sbrussi@universo.univates.br"
    }
  },
  "paths": {    
    "/sessions": {
      "post": {
        "tags": ["Session"],
        "summary": "Authentication user",
        "description":  "Authentication user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                 "example": {
                  "email": "beeheroes@example.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }
      }
    },
    "/entitytypes": {
      "post": {
        "tags": ["Entity Type"],
        "summary": "Create a Entity Type",
        "description": "Create a New Entity Type",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "entity type name sample",
                  "description": "entity type description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Entity Type already exists!"
          }
        }
      }
    },
    "/usertypes": {
      "post": {
        "tags": ["User Type"],
        "summary": "Create a User Type",
        "description": "Create a New User Type",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "user type name sample",
                  "description": "user type description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "User Type already exists!"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create a User",
        "description": "Create a New User",
        "security": [
          { "bearerAuth": []}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "user_type_id": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "user type name sample",
                  "email": "beeheroes@example.com",
                  "password": "123456",
                  "user_type_id": "adb275ef-a90b-49cb-8d9b-376ddfb53f76"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "User already exists!"
          }
        }
      }
    }
  },
    "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}